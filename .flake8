[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info
ignore = 
    E203,  # whitespace before ':' (black handles this)
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator (black)
    E402,  # module level import not at top (needed for sys.path hacks)
per-file-ignores =
    __init__.py:F401
